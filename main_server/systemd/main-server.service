[Unit]
Description=Central Service & Driver Management System - Main Server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/main-server
ExecStart=/usr/bin/python3 -m uvicorn app.main:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5
Environment=PYTHONPATH=/opt/main-server

[Install]
WantedBy=multi-user.target
