      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "node3_url",
      "value": "http://localhost:8083",
      "type": "string"
    },
    {
      "key": "node_id",
      "value": "node-1",
      "type": "string"
    },
    {
      "key": "job_id",
      "value": "update-001",
      "type": "string"
    },
    {
      "key": "service_name",
      "value": "node-agent",
      "type": "string"
    }
  ]
}
