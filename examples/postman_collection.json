{
  "info": {
    "name": "Central Service & Driver Management System",
    "description": "API collection for testing the management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Main Server Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Node 1 Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{node1_url}}/health",
              "host": ["{{node1_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Node 2 Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{node2_url}}/health",
              "host": ["{{node2_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Node 3 Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{node3_url}}/health",
              "host": ["{{node3_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Node Management",
      "item": [
        {
          "name": "List All Nodes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/nodes",
              "host": ["{{base_url}}"],
              "path": ["api", "nodes"]
            }
          }
        },
        {
          "name": "Get Node by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/nodes/{{node_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "nodes", "{{node_id}}"]
            }
          }
        },
        {
          "name": "Register New Node",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"node_id\": \"node-4\",\n  \"hostname\": \"worker-4\",\n  \"ip_address\": \"192.168.1.104\",\n  \"status\": \"online\",\n  \"last_seen\": \"2024-01-01T00:00:00Z\",\n  \"services\": [\"node-agent\", \"docker\", \"systemd-resolved\"],\n  \"drivers\": [\"usb-storage\", \"network\", \"audio\"],\n  \"system_info\": {\n    \"os\": \"Linux\",\n    \"architecture\": \"x86_64\",\n    \"kernel\": \"5.4.0\",\n    \"ram_gb\": 8\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/nodes/register",
              "host": ["{{base_url}}"],
              "path": ["api", "nodes", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Update Management",
      "item": [
        {
          "name": "Create Service Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"update_id\": \"service-update-001\",\n  \"update_type\": \"service\",\n  \"package_name\": \"my-service\",\n  \"package_version\": \"1.2.0\",\n  \"package_url\": \"https://example.com/my-service-1.2.0.tar.gz\",\n  \"target_nodes\": [\"node-1\", \"node-2\", \"node-3\"],\n  \"description\": \"Update my-service to version 1.2.0 with new features\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/updates",
              "host": ["{{base_url}}"],
              "path": ["api", "updates"]
            }
          }
        },
        {
          "name": "Create Driver Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"update_id\": \"driver-update-001\",\n  \"update_type\": \"driver\",\n  \"package_name\": \"network-driver\",\n  \"package_version\": \"2.1.0\",\n  \"package_url\": \"https://example.com/network-driver-2.1.0.ko\",\n  \"target_nodes\": [\"node-1\"],\n  \"description\": \"Update network driver for better performance\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/updates",
              "host": ["{{base_url}}"],
              "path": ["api", "updates"]
            }
          }
        },
        {
          "name": "Create Package Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"update_id\": \"package-update-001\",\n  \"update_type\": \"package\",\n  \"package_name\": \"htop\",\n  \"package_version\": \"3.0.0\",\n  \"package_url\": \"https://example.com/htop-3.0.0.deb\",\n  \"target_nodes\": [\"node-2\", \"node-3\"],\n  \"description\": \"Update htop to latest version\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/updates",
              "host": ["{{base_url}}"],
              "path": ["api", "updates"]
            }
          }
        },
        {
          "name": "Get Update Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/updates/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "updates", "{{job_id}}"]
            }
          }
        },
        {
          "name": "List All Updates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/updates",
              "host": ["{{base_url}}"],
              "path": ["api", "updates"]
            }
          }
        }
      ]
    },
    {
      "name": "Node Agent Operations",
      "item": [
        {
          "name": "Get Node Services",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{node1_url}}/agent/services",
              "host": ["{{node1_url}}"],
              "path": ["agent", "services"]
            }
          }
        },
        {
          "name": "Get Service Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{node1_url}}/agent/logs/{{service_name}}?lines=50",
              "host": ["{{node1_url}}"],
              "path": ["agent", "logs", "{{service_name}}"],
              "query": [
                {
                  "key": "lines",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Send Update to Node",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"job_id\": \"direct-update-001\",\n  \"update_type\": \"service\",\n  \"package_name\": \"test-service\",\n  \"package_version\": \"1.0.0\",\n  \"package_url\": \"https://example.com/test-service-1.0.0.tar.gz\",\n  \"description\": \"Direct update to node\"\n}"
            },
            "url": {
              "raw": "{{node1_url}}/agent/update",
              "host": ["{{node1_url}}"],
              "path": ["agent", "update"]
            }
          }
        },
        {
          "name": "Send Rollback to Node",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"job_id\": \"{{job_id}}\"\n}"
            },
            "url": {
              "raw": "{{node1_url}}/agent/rollback",
              "host": ["{{node1_url}}"],
              "path": ["agent", "rollback"]
            }
          }
        }
      ]
    }
  ],
