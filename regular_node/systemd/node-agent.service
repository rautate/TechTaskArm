[Unit]
Description=Regular Node Agent
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/node-agent
ExecStart=/usr/bin/python3 -m uvicorn agent.main:app --host 0.0.0.0 --port 8081
Restart=always
RestartSec=5
Environment=PYTHONPATH=/opt/node-agent

[Install]
WantedBy=multi-user.target
